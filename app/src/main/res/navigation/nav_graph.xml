<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="daniel.brian.fooddeliveryapp.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="daniel.brian.fooddeliveryapp.fragments.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/addToCartFragment"
        android:name="daniel.brian.fooddeliveryapp.fragments.AddToCartFragment"
        android:label="fragment_add_to_cart"
        tools:layout="@layout/fragment_add_to_cart" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="daniel.brian.fooddeliveryapp.fragments.UserProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_userprofile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="daniel.brian.fooddeliveryapp.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>